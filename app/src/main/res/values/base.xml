<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="MainMenu" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="colorAccent">@color/colorVariant</item>
        <item name="colorControlNormal">@color/colorVariant</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>


    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/ic_button_primary</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:background">@drawable/ic_button_secondary</item>
    </style>
</resources>